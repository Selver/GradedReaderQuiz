<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/scrollViewStyle"
    android:background="@drawable/wonderland">

    <LinearLayout style="@style/mainLayoutStyle">

        <android.support.v7.widget.CardView style="@style/cardViewStyle">

            <LinearLayout style="@style/mainLayoutStyle">

                <TextView
                    style="@style/textViewStyle"
                    android:text="@string/question_1" />

                <CheckBox
                    android:id="@+id/question_1_answer_1"
                    style="@style/checkBoxStyle"
                    android:text="@string/question_1_answer_1" />

                <CheckBox
                    android:id="@+id/question_1_answer_2"
                    style="@style/checkBoxStyle"
                    android:text="@string/question_1_answer_2" />

                <CheckBox
                    android:id="@+id/question_1_answer_3"
                    style="@style/checkBoxStyle"
                    android:text="@string/question_1_answer_3" />

                <CheckBox
                    android:id="@+id/question_1_answer_4"
                    style="@style/checkBoxStyle"
                    android:text="@string/question_1_answer_4" />

                <CheckBox
                    android:id="@+id/question_1_answer_5"
                    style="@style/checkBoxStyle"
                    android:text="@string/question_1_answer_5" />

                <CheckBox
                    android:id="@+id/question_1_answer_6"
                    style="@style/checkBoxStyle"
                    android:text="@string/question_1_answer_6" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            style="@style/cardViewStyle">

            <LinearLayout style="@style/mainLayoutStyle">

                <TextView
                    style="@style/textViewStyle"
                    android:text="@string/question_2" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen4"
                    android:text="@string/question_2_1"
                    android:textSize="@dimen/text_size_18" />

                <RadioGroup
                    android:id="@+id/radio_group_question_2"
                    style="@style/radioGroupStyle"
                    android:layout_marginBottom="@dimen/dimen8"
                    android:layout_weight="1">

                    <RadioButton
                        style="@style/radioButtonStyle"
                        android:text="@string/question_2_answer_1" />

                    <RadioButton
                        style="@style/radioButtonStyle"
                        android:text="@string/question_2_answer_2" />

                    <RadioButton
                        android:id="@+id/question_2_answer_3_correct"
                        style="@style/radioButtonStyle"
                        android:text="@string/question_2_answer_3" />

                    <RadioButton
                        style="@style/radioButtonStyle"
                        android:text="@string/question_2_answer_4" />
                </RadioGroup>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            style="@style/cardViewStyle">

            <LinearLayout style="@style/mainLayoutStyle">

                <TextView
                    style="@style/textViewStyle"
                    android:text="@string/question_3" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen4"
                    android:text="@string/question_3_1"
                    android:textSize="@dimen/text_size_18" />

                <RadioGroup
                    android:id="@+id/radio_group_question_3"
                    style="@style/radioGroupStyle"
                    android:layout_marginBottom="@dimen/dimen8"
                    android:layout_weight="1">

                    <RadioButton
                        style="@style/radioButtonStyle"
                        android:text="@string/question_3_answer_1" />

                    <RadioButton
                        style="@style/radioButtonStyle"
                        android:text="@string/question_3_answer_2" />

                    <RadioButton
                        style="@style/radioButtonStyle"
                        android:text="@string/question_3_answer_3" />

                    <RadioButton
                        android:id="@+id/question_3_answer_4_correct"
                        style="@style/radioButtonStyle"
                        android:text="@string/question_3_answer_4" />
                </RadioGroup>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            style="@style/cardViewStyle">

            <LinearLayout style="@style/mainLayoutStyle">

                <TextView
                    style="@style/textViewStyle"
                    android:text="@string/question_4" />

                <RadioGroup
                    android:id="@+id/radio_group_question_4"
                    style="@style/radioGroupStyle"
                    android:layout_weight="1">

                    <RadioButton
                        android:id="@+id/question_4_answer_1_correct"
                        style="@style/radioButtonStyle"
                        android:text="@string/question_4_answer_1" />

                    <RadioButton
                        style="@style/radioButtonStyle"
                        android:text="@string/question_4_answer_2" />

                    <RadioButton
                        style="@style/radioButtonStyle"
                        android:text="@string/question_4_answer_3" />

                    <RadioButton
                        style="@style/radioButtonStyle"
                        android:text="@string/question_4_answer_4" />
                </RadioGroup>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            style="@style/cardViewStyle">

            <LinearLayout style="@style/mainLayoutStyle">

                <TextView
                    style="@style/textViewStyle"
                    android:text="@string/question_5" />

                <RadioGroup
                    android:id="@+id/radio_group_question_5"
                    style="@style/radioGroupStyle"
                    android:layout_weight="1">

                    <RadioButton
                        style="@style/radioButtonStyle"
                        android:text="@string/question_5_answer_1" />

                    <RadioButton
                        android:id="@+id/question_5_answer_2_correct"
                        style="@style/radioButtonStyle"
                        android:text="@string/question_5_answer_2" />

                    <RadioButton
                        style="@style/radioButtonStyle"
                        android:text="@string/question_5_answer_3" />

                    <RadioButton
                        style="@style/radioButtonStyle"
                        android:text="@string/question_5_answer_4" />
                </RadioGroup>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            style="@style/cardViewStyle">

            <LinearLayout style="@style/mainLayoutStyle">

                <TextView
                    style="@style/textViewStyle"
                    android:text="@string/question_6" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen4"
                    android:text="@string/question_6_1"
                    android:textSize="@dimen/text_size_18" />

                <RadioGroup
                    android:id="@+id/radio_group_question_6"
                    style="@style/radioGroupStyle"
                    android:layout_weight="1">

                    <RadioButton
                        style="@style/radioButtonStyle"
                        android:text="@string/question_6_answer_1" />

                    <RadioButton
                        android:id="@+id/question_6_answer_2_correct"
                        style="@style/radioButtonStyle"
                        android:text="@string/question_6_answer_2" />

                </RadioGroup>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView style="@style/cardViewStyle">

            <LinearLayout style="@style/mainLayoutStyle">

                <TextView
                    style="@style/textViewStyle"
                    android:layout_marginTop="@dimen/dimen8"
                    android:text="@string/question_7" />

                <RadioGroup
                    android:id="@+id/radio_group_question_7"
                    style="@style/radioGroupStyle"
                    android:layout_marginBottom="@dimen/dimen24"
                    android:layout_weight="1">

                    <RadioButton
                        style="@style/radioButtonStyle"
                        android:text="@string/question_7_answer_1"
                        android:paddingBottom="@dimen/dimen4"/>

                    <RadioButton

                        style="@style/radioButtonStyle"
                        android:text="@string/question_7_answer_2"
                        android:paddingBottom="@dimen/dimen4"/>

                    <RadioButton
                        android:id="@+id/question_7_answer_3_correct"
                        style="@style/radioButtonStyle"
                        android:text="@string/question_7_answer_3"
                        android:paddingBottom="@dimen/dimen4"/>

                    <RadioButton
                        style="@style/radioButtonStyle"
                        android:text="@string/question_7_answer_4" />
                </RadioGroup>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/submit_button"
            style="@style/submitButtonStyle" />

        <android.support.v7.widget.CardView
            android:id="@+id/displayScoreCard"
            style="@style/cardViewStyle"
            android:visibility="invisible">

            <TextView
                android:id="@+id/textViewDisplayScore"
                style="@style/messageViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </android.support.v7.widget.CardView>

        <LinearLayout style="@style/layoutStyle3">

            <Button
                android:id="@+id/restart_button"
                style="@style/restartButtonStyle"
                android:onClick="resetQuiz" />

            <Button
                android:id="@+id/share_results_button"
                style="@style/shareButtonStyle" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>








